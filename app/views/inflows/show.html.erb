<div>
  <h3><%= ENV['COMPANY_NAME'] %></h3>
  <p><%= ENV['COMPANY_OWNER'] %></p>
  <p><%= ENV['COMPANY_OWNER_CUIT'] %></p>
  <p><%= ENV['COMPANY_ADDRESS'] %></p>
  <p><%= ENV['COMPANY_PHONE'] %></p>
  <p><%= I18n.l(@inflow.created_at, format: :default) %></p>
  <hr>
  <% @inflow.items.each do |item| %>
    <p><%= item.receipt_list %></p>
  <% end %>
  <hr>
  <p><%= I18n.t('activerecord.attributes.inflows.total') %>:  $<%= @inflow.total %></p>
  <p><%= ENV['PURCHASE_MESSAGE'] %></p>
</div>