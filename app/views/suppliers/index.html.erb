<div>
  <%= render 'shared/notice', notice: notice %>
  <%= render 'shared/alert', alert: alert %>

  <div>
    <h1><%= I18n.t('activerecord.models.supplier.other') %></h1>
    
    <button type="button"><%= link_to I18n.t('helpers.links.new_supplier'), new_supplier_path %></button>
  </div>

  <div>
    <table>
      <thead>
        <tr>
          <th><%= I18n.t('activerecord.attributes.suppliers.name') %></th>
          <th><%= I18n.t('activerecord.attributes.suppliers.phone_number') %></th>
          <th><%= I18n.t('activerecord.attributes.suppliers.account_balance') %></th>
          <th><%= I18n.t('activerecord.attributes.suppliers.notification_threshold') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @suppliers.order(name: :asc).each do |supplier| %>
          <tr>
            <td><%= supplier.name %></td>
            <td><%= supplier.phone_number %></td>
            <td>$ <%= supplier.account_balance %></td>
            <td>$ <%= supplier.notification_threshold %></td>
            <td>
              <button type="button"><%= link_to I18n.t('helpers.buttons.show'), supplier%></button>
            </td>
            <td>
              <button type="button">
                <%= link_to I18n.t('helpers.buttons.edit'), edit_supplier_path(supplier) %>
              </button>
            </td>
            <td>
              <%= button_to I18n.t('helpers.buttons.destroy'), supplier, method: :delete, data: { turbo_method: :delete, turbo_confirm: I18n.t('helpers.buttons.are_you_sure') }%>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
</div>