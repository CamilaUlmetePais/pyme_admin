<div class="ml-3 mt-1">
  <h1 class="text-4xl font-medium mb-2"><%= I18n.t('devise.views.login') %></h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs ">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  label_html: { class:'block my-1' },
                  input_html: { autocomplete: "email", class: 'rounded-md shadow-sm focus:ring-transparent mx-2 border-gray-400' } %>
      <%= f.input :password,
                  required: false,
                  hint_html: { class: 'block text-gray-500 text-xs ml-4' },
                  label_html: { class:'block my-1' },
                  input_html: { autocomplete: "current-password", class: 'rounded-md shadow-sm focus:ring-transparent mx-2 border-gray-400' } %>
      <%= f.input :remember_me, as: :boolean, input_html: {class: 'w-6 h-6 rounded-xl shadow-sm focus:ring-transparent m-2 border-gray-400'} if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions m-2">
      <%= f.button :submit, I18n.t('devise.views.login'), class: "p-3 bg-blue-700 hover:bg-blue-800 rounded-md shadow-sm font-medium text-white" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>