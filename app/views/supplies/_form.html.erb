<%= simple_form_for(@supply, html: {}) do |f| %>
  <div>
    <%= f.error_notification %>
    <%= f.input :name  %>
    <%= f.input :price %>
    <%= f.input :unit, collection: [
        [ I18n.t('views.body.unit.kg'), 0], 
        [ I18n.t('views.body.unit.u'), 1],
        [ I18n.t('views.body.unit.ars'), 2]
      ], prompt: I18n.t('simple_form.prompts.defaults.unit') %>
    <%= f.input :stock %>
  </div>

  <div>
    <button type="button">
      <%= link_to I18n.t('helpers.buttons.back'), supplies_path, data: { confirm: I18n.t('helpers.buttons.are_you_sure')} %>
    </button>
    <%= f.button :submit %>
  </div>

<% end %>