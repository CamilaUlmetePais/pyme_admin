<div class="m-3">
	<%= render 'shared/notice', notice: notice %>
	<%= render 'shared/alert', alert: alert %>

	<div class="grid grid-cols-12 mb-2">	
		<div class="col-span-7 md:col-span-4 self-center mb-2">
			<h1 class="text-4xl font-medium"><%= I18n.t('activerecord.models.supply.other') %></h1>
		</div>
		<div class="col-span-5 lg:col-span-2 xl:col-span-2 md:justify-self-end self-center">
			<button type="button" class="p-3 bg-blue-700 hover:bg-blue-800 rounded-md shadow-sm font-medium text-white">
				<%= link_to I18n.t('helpers.links.new_supply'), new_supply_path %>
			</button>
		</div>
	</div>

	<table class="table-auto w-7/8 m-2 p-2">
		<thead>
			<tr class="border border-gray-200 bg-gray-200  text-center text-xs text-gray-600 uppercase">
				<th class="py-2 md:px-6"><%= I18n.t('activerecord.attributes.supplies.name') %></th>
				<th class="py-2 md:px-4"><%= I18n.t('activerecord.attributes.supplies.price') %></th>
				<th class="py-2 md:px-4"><%= I18n.t('activerecord.attributes.supplies.stock') %></th>
				<th colspan="3" class="md:px-2"></th>
			</tr>
		</thead>

		<tbody>
			<% @supplies.order(name: :asc).each do |supply| %>
				<tr>
					<td class="text-xs md:text-sm"><%= supply.name %></td>
					<td class="text-xs md:text-sm">
						$<%= number_with_precision(supply.price, strip_insignificant_zeros: true) %>
					</td>
					<td class="text-xs md:text-sm">
						<%= number_with_precision(supply.stock, strip_insignificant_zeros: true) %> <%= supply.unit.upcase %></td>
					<td>
						<button type="button" class="m-1 p-2 bg-blue-500 hover:bg-blue-600 rounded-md shadow-sm text-xs text-white">
							<%= link_to I18n.t('helpers.buttons.show'), supply_path(supply) %>
						</button>
					</td>
					<td>
						<button type="button" class="m-1 p-2 bg-green-600 hover:bg-green-700 rounded-md shadow-sm text-xs text-white">
							<%= link_to I18n.t('helpers.buttons.edit'), edit_supply_path(supply) %>
						</button>
					</td>
					<td>
						<div class="m-1 p-2 bg-red-600 hover:bg-red-700 rounded-md shadow-sm text-xs text-white">
							<%= button_to I18n.t('helpers.buttons.destroy'), supply, method: :delete, data: { turbo_method: :delete, turbo_confirm: I18n.t('helpers.buttons.are_you_sure') }%>
						</div>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>

	<%= paginate @supplies %>
	<br>
</div>