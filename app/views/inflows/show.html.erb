<div class="m-3 p-3 w-5/6 lg:w-1/3 border border-blue-200 bg-blue-100 rounded-md shadow-sm">
  <h3 class="text-2xl font-medium text-center"><%= ENV['COMPANY_NAME'] %></h3>
  <p class="text-center"><%= ENV['COMPANY_OWNER'] %></p>
  <p class="text-center"><%= ENV['COMPANY_OWNER_CUIT'] %></p>
  <p class="text-center"><%= ENV['COMPANY_ADDRESS'] %></p>
  <p class="text-center mb-2"><%= ENV['COMPANY_PHONE'] %></p>
  <p class="mb-2"><%= I18n.t('views.body.show.receipt_date') %>: <%= I18n.l(@inflow.created_at, format: :default) %></p>
  <p><%= I18n.t('views.body.show.receipt_items') %>: </p>
  <% @inflow.items.each do |item| %>
    <p><%= item.receipt_list %></p>
  <% end %>
  <div class="mb-2"></div>
  <p class="mb-2">
    <%= I18n.t('activerecord.attributes.inflows.total') %>: 
    $<%= number_with_precision(@inflow.total, strip_insignificant_zeros: true) %>
  </p>
  <p><%= ENV['PURCHASE_MESSAGE'] %></p>
</div>