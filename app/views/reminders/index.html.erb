<div>
  <%= render 'shared/notice', notice: notice %>
  <%= render 'shared/alert', alert: alert %>

	<div class="grid grid-cols-6 gap-2">
		<div class="col-span-6 lg:col-span-3 m-3">

			<div class="grid grid-cols-4 mb-2">	
				<div class="col-span-4 md:col-span-2 self-center mb-2">
					<h1 class="text-4xl font-medium"><%= I18n.t('activerecord.models.reminder.other') %></h1>
				</div>
				<div class="col-span-4 md:col-span-2 md:justify-self-end self-center">
					<button type="button" class="p-3 bg-blue-700 hover:bg-blue-800 rounded-md shadow-sm font-medium text-white">
						<%= link_to I18n.t('helpers.links.new_reminder'), new_reminder_path %>
					</button>
				</div>
			</div>

			<% @reminders.order(due_date: :desc).each do |reminder| %>
				<div class="md:w-5/12 w-full m-2 p-2 bg-gray-100 hover:bg-gray-200 border border-gray-200 rounded-md shadow-sm inline-block">
					<div class="inline-block w-5/6 font-medium text-lg">
						<%= reminder.title.capitalize %>
					</div>
					<div class="inline-block">
						<%= checkbox(reminder.done) %>
					</div>
					<div>
						<span class="text-gray-600 text-xs uppercase">
						<%= I18n.t('activerecord.attributes.reminders.due_date')%>: </span>
						<span class="text-sm"><%= I18n.l(reminder.due_date, format: :short) %></span>
					</div>
					<div class="text-sm m-1">
						<%= reminder.text.capitalize %>
					</div>
					<button type='button' class="m-1 p-2 bg-blue-500 hover:bg-blue-600 rounded-md shadow-sm text-xs text-white">
						<%= link_to I18n.t('helpers.buttons.show'), reminder_path(reminder) %>
					</button>
					<button type='button' class="m-1 p-2 bg-green-600 hover:bg-green-700 rounded-md shadow-sm text-xs text-white">
						<%= link_to I18n.t('helpers.buttons.edit'), edit_reminder_path(reminder) %>
					</button>
					<div class="inline-block">
						<%= button_to I18n.t('helpers.buttons.destroy'), reminder_path(reminder), method: :delete, data: { turbo_method: :delete, turbo_confirm: I18n.t('helpers.buttons.are_you_sure') }, class: 'm-1 p-2 bg-red-600 hover:bg-red-700 rounded-md shadow-sm text-xs text-white' %>
					</div>
				</div>
			<% end %>
			<%= paginate @reminders %>
		</div>

		<div class="col-span-6 lg:col-span-3 m-3">	

			<div class="grid grid-cols-4 mb-2">	
				<div class="col-span-4 md:col-span-2 self-center mb-2">
					<h1 class="text-4xl font-medium"><%= I18n.t('views.headers.notifications') %></h1>
				</div>
				<div class="col-span-4 md:col-span-2 md:justify-self-end self-center">
					<button type="button" class="p-3 bg-red-700 hover:bg-red-800 rounded-md shadow-sm font-medium text-white">
						<%= I18n.t('helpers.buttons.destroy_all') %>
					</button>
				</div>
			</div>
			
			<% @notifications.order(created_at: :desc).each do |notification| %>
				<div class="w-full lg:w-11/12 m-2 p-2 bg-gray-100 hover:bg-gray-200 border border-gray-200 rounded-md shadow-sm grid">
					<div class="font-medium text-lg">
						<%= notification.title %>
					</div>
					<div class="text-sm m-1">
						<%= notification.text %>
					</div>
					<div class="justify-self-end">
						<%= button_to I18n.t('helpers.buttons.destroy'), notification_path(notification), method: :delete, data: { turbo_method: :delete, turbo_confirm: I18n.t('helpers.buttons.are_you_sure') }, class: 'm-1 p-2 bg-red-600 hover:bg-red-700 rounded-md shadow-sm text-xs text-white' %>
					</div>
				</div>
			<% end %>
			<%= paginate @notifications %>
	
		</div>
	
	</div>
</div>