<div class="ml-3 mt-1">
  <h1 class="text-4xl font-medium mb-2"><%= I18n.t('devise.views.forgot_password')%></h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs my-4">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  label_html: { class:'block my-1' },
                  input_html: { autocomplete: "email", class: 'rounded-md shadow-sm focus:ring-transparent mx-2 border-gray-400' } %>
    </div>

    <div class="form-actions mb-4">
      <%= f.button :submit, I18n.t('devise.views.send_reset_instructions'), class: "p-3 bg-blue-700 hover:bg-blue-800 rounded-md shadow-sm font-medium text-white" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
