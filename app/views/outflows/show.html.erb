<div class="m-3 p-3 w-5/6 lg:w-1/3 border border-blue-200 bg-blue-100 rounded-md shadow-sm">
  <h3 class="text-2xl font-medium text-center"><%= ENV["COMPANY_NAME"] %></h3>
  <p class="text-center"><%= ENV['COMPANY_OWNER'] %></p>
  <p class="text-center"><%= ENV['COMPANY_OWNER_CUIT'] %></p>
  <p class="text-center"><%= ENV['COMPANY_ADDRESS'] %></p>
  <p class="text-center mb-2"><%= ENV['COMPANY_PHONE'] %></p>
  <span class="font-medium mb-2"><%= I18n.t('views.body.show.payment_receipt') %></span>: <%= @outflow.supplier.name %>
  <p class="my-2"><%= I18n.t('views.body.show.receipt_date') %>: <%= I18n.l(@outflow.created_at, format: :default) %></p>
  <p><%= I18n.t('views.body.show.receipt_items') %>: </p>
  <% @outflow.items.each do |item| %>
    <p><%= item.receipt_list %></p>
  <% end %>
  <div class="mb-2"></div>
  <p>
    <span class="font-medium"><%= I18n.t('activerecord.attributes.outflows.total') %>: </span> 
    $<%= number_with_precision(@outflow.total, strip_insignificant_zeros: true) %>
  </p>
  <p>
    <span class="font-medium"><%= I18n.t('activerecord.attributes.outflows.paid') %>: </span>  
    $<%= number_with_precision(@outflow.paid, strip_insignificant_zeros: true) %>
  </p>
</div>