<div class="mt-1 ml-3">
  <h1 class="text-4xl font-medium mb-2"><%= I18n.t('devise.views.change_password')%></h1>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.full_error :reset_password_token %>

    <div class="form-inputs">
      <%= f.input :password,
                  label: I18n.t('devise.views.new_password'),
                  label_html: { class:'block my-1' },
                  required: true,
                  autofocus: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  hint_html: { class: 'block text-gray-500 text-xs ml-4' },
                  input_html: { autocomplete: "new-password", class: 'rounded-md shadow-sm focus:ring-transparent mx-2 border-gray-400' } %>
      <%= f.input :password_confirmation,
                  label: I18n.t('devise.views.confirm_new_password'),
                  label_html: { class:'block my-1' },
                  required: true,
                  input_html: { autocomplete: "new-password", class: 'rounded-md shadow-sm focus:ring-transparent mx-2 border-gray-400' } %>
    </div>

    <div class="form-actions mt-3">
      <%= f.button :submit, I18n.t('devise.views.change_my_password'), class: "p-3 bg-blue-700 hover:bg-blue-800 rounded-md shadow-sm font-medium text-white" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
